{
  "name": "escook-translate",
  "displayName": "escook-translate",
  "description": "单词翻译插件",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:escook-translate.translate",
    "onCommand:escook-translate.replace"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "escook-translate.translate",
        "title": "escook-translate:translate"
      }
    ],
    "keybindings": [
      {
        "command": "escook-translate.translate",
        "key": "Ctrl+Alt+X",
        "mac": "Cmd+Alt+X",
        "when": "editorTextFocus&&editorHasSelection"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.71.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "axios": "^0.27.2"
  }
}
